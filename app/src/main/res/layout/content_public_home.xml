<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRegCrimes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="regCrimesBtn"
        app:layout_constraintBottom_toBottomOf="@+id/cv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cv2"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_report_crime" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register\nCrimes"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:onClick="nocBtn"
        app:layout_constraintEnd_toStartOf="@+id/cv3"
        app:layout_constraintStart_toEndOf="@+id/cvRegCrimes"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_noc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOC"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="passportVerificationBtn"
        app:layout_constraintBottom_toBottomOf="@+id/cv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cv2"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_appointment" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Passport Verification"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="cyberFraudBtn"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="@+id/cvRegCrimes"
        app:layout_constraintTop_toBottomOf="@+id/cv2"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_sos" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report Cyber Fraud"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="locatePolice"
        app:layout_constraintStart_toStartOf="@+id/cv2"
        app:layout_constraintTop_toTopOf="@+id/cv5"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_locate_police" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Locate Police Station"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="cyberAwarenessBtn"
        app:layout_constraintStart_toStartOf="@+id/cv3"
        app:layout_constraintTop_toTopOf="@+id/cv7"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_cyber" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cyber\nAwareness"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv101"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:onClick="otherServicesBtn"
        app:layout_constraintEnd_toEndOf="@+id/cv7"
        app:layout_constraintStart_toStartOf="@+id/cv7"
        app:layout_constraintTop_toBottomOf="@+id/cv7"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_cyber" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Other\nServices"
                android:textAlignment="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>